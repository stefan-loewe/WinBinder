    $errors++;
    $errstr .= "Line " . __LINE__ . " , should get id = 3\n";
}
$valarray[] = array(2, 2, "just a name2", "some TEXT", 33);
$valarray[] = array(3, 2, "just a name3", "some TEXT", 44);
$valarray[] = array(4, 2, "just a name4", "some TEXT", 55);
